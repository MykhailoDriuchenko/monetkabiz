<style>
    :root {
        --primary-color: #4b5dff;
        --secondary-color: #76d5f1;
        --accent-color: #ff6b7a;
        --success-color: #33cc6f;
        --background-dark: #121212;
        --card-bg: #1e1e1e;
        --text-primary: #e0e0e0;
        --text-secondary: #aaa;
        --border-radius: 12px;
        --shadow: 0 8px 24px rgba(0, 0, 0, 0.3);
        --transition: all 0.3s ease;
    }

    body, html {
        margin: 0;
        padding: 0;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: var(--background-dark);
        color: var(--text-primary);
        line-height: 1.6;
    }

    .content-wrapper {
        flex: 1;
        padding: 20px;
        max-width: 1200px;
        margin: 0 auto;
        width: 100%;
    }

    /* –•–ª–µ–±–Ω—ã–µ –∫—Ä–æ—à–∫–∏ */
    .breadcrumb {
        margin-bottom: 20px;
        font-size: 14px;
        color: var(--text-secondary);
    }

    .breadcrumb a {
        color: var(--secondary-color);
        text-decoration: none;
    }

    .breadcrumb a:hover {
        text-decoration: underline;
    }

    /* –û—Å–Ω–æ–≤–Ω–æ–π –∫–æ–Ω—Ç–µ–π–Ω–µ—Ä */
    .ad-detail-container {
        background: var(--card-bg);
        border-radius: var(--border-radius);
        padding: 30px;
        box-shadow: var(--shadow);
    }

    /* –ó–∞–≥–æ–ª–æ–≤–æ–∫ –∏ —Ü–µ–Ω–∞ */
    .ad-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 30px;
        flex-wrap: wrap;
        gap: 20px;
    }

    .ad-title {
        font-size: 28px;
        font-weight: 700;
        margin: 0;
        color: var(--text-primary);
        flex: 1;
        min-width: 300px;
    }

    .price-section {
        text-align: right;
    }

    .ad-price {
        font-size: 32px;
        font-weight: bold;
        color: var(--success-color);
        display: block;
    }

    .original-price {
        font-size: 18px;
        color: var(--text-secondary);
        text-decoration: line-through;
        margin-right: 10px;
    }

    .discount-badge {
        background: var(--accent-color);
        color: white;
        padding: 4px 8px;
        border-radius: 20px;
        font-size: 14px;
        font-weight: bold;
    }

    /* –û—Å–Ω–æ–≤–Ω–æ–π –∫–æ–Ω—Ç–µ–Ω—Ç */
    .ad-content {
        display: grid;
        grid-template-columns: 1fr 400px;
        gap: 30px;
    }

    /* –ì–∞–ª–µ—Ä–µ—è */
    .gallery-section {
        background: rgba(0, 0, 0, 0.2);
        border-radius: var(--border-radius);
        padding: 20px;
    }

    /* –°–µ–∫—Ü–∏—è –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏–∏ */
    .info-section {
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    /* –ö–Ω–æ–ø–∫–∏ */
    .action-buttons {
        display: flex;
        flex-direction: column;
        gap: 12px;
    }

    .btn {
        display: inline-block;
        padding: 12px 20px;
        border-radius: var(--border-radius);
        text-decoration: none;
        text-align: center;
        font-weight: 600;
        transition: var(--transition);
        border: none;
        cursor: pointer;
        font-size: 16px;
    }

    .btn-primary {
        background: var(--primary-color);
        color: white;
    }

    .btn-primary:hover {
        background: #3a4acc;
        transform: translateY(-2px);
    }

    .btn-secondary {
        background: #2d2d2d;
        color: var(--text-primary);
        border: 1px solid #404040;
    }

    .btn-secondary:hover {
        background: #404040;
    }

    .btn-favorite {
        background: #2d2d2d;
        color: var(--text-primary);
        border: 1px solid #404040;
    }

    .btn-favorite:hover {
        background: #ff4757;
        color: white;
    }

    .btn-order {
        background: var(--success-color);
        color: white;
        font-size: 18px;
        padding: 15px;
    }

    .btn-order:hover {
        background: #2bb459;
        transform: translateY(-2px);
    }

    .btn-edit {
        background: var(--secondary-color);
        color: #121212;
    }

    .btn-delete {
        background: var(--accent-color);
        color: white;
    }

    /* –ö–∞—Ä—Ç–æ—á–∫–∏ */
    .description-card,
    .contacts-card {
        background: rgba(0, 0, 0, 0.2);
        padding: 20px;
        border-radius: var(--border-radius);
        border: 1px solid #2d2d2d;
    }

    .description-card h3,
    .contacts-card h3 {
        margin-top: 0;
        color: var(--secondary-color);
        font-size: 18px;
        margin-bottom: 15px;
    }

    .ad-description {
        color: var(--text-primary);
        line-height: 1.6;
        white-space: pre-wrap;
    }

    /* –ö–æ–Ω—Ç–∞–∫—Ç—ã */
    .contact-info {
        display: flex;
        flex-direction: column;
        gap: 12px;
    }

    .contact-item {
        display: flex;
        align-items: center;
        gap: 10px;
        padding: 8px 0;
    }

    .contact-icon {
        font-size: 18px;
        width: 24px;
        text-align: center;
    }

    /* –ú–µ—Ç–∞ –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏—è */
    .meta-info {
        display: flex;
        justify-content: space-between;
        font-size: 14px;
        color: var(--text-secondary);
        padding-top: 15px;
        border-top: 1px solid #2d2d2d;
    }

    /* –ê–¥–∞–ø—Ç–∏–≤–Ω–æ—Å—Ç—å */
    @media (max-width: 968px) {
        .ad-content {
            grid-template-columns: 1fr;
        }
        
        .ad-header {
            flex-direction: column;
        }
        
        .price-section {
            text-align: left;
        }
    }

    @media (max-width: 768px) {
        .content-wrapper {
            padding: 10px;
        }
        
        .ad-detail-container {
            padding: 20px;
        }
        
        .ad-title {
            font-size: 24px;
        }
        
        .ad-price {
            font-size: 28px;
        }
        
        .action-buttons {
            flex-direction: column;
        }
    }

    /* –ê–Ω–∏–º–∞—Ü–∏–∏ */
    @keyframes fadeIn {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }

    .ad-detail-container {
        animation: fadeIn 0.6s ease-out;
    }
</style>